 <h1> Here are the orders for <%= @cust_last %></h1> 
<br>
<br>
<br>
 <center> 
 <div id="table">
<table width = 40% border= 1> 
<thead> 
	<tr>
		<th> Customer </th>
		<th> Toy Name </th>
		<th> Quantity </th>
		<th> Total </th> 
		<!-- <th colspan="3"></th>-->
	</tr>
</thead>
<tbody> 
	<% @orderslist.each do |order| %>
	<tr> 
		<td><%= order.customer_id %> </td>
		<td> <%= order.toyname %></td>
		<td><%= order.quantity %> </td>
		<td> <%= number_with_precision(order.total, :precision => 2) %> </td>
	</tr>
</div>

<% end %> 